{{ define "navbar" }}{{ end }}

{{ define "content" }}
<div class="row mt-2">
    <div class="col">
        <h4>Afsplitsen</h4>
        {{ with .Alert }}
            <div class="alert alert-danger">{{ . }}</div>
        {{ end }}
        <form action="/split?id={{ .Form.Id }}" method="post">
            {{ template "object-form-fields" . }}
            <button type="submit" class="btn btn-outline-success">Afsplitsen</button>
            <a href="/view" class="btn btn-outline-primary">Terug</a>
        </form>
    </div>
    <div class="col">
        <h4 class="text-muted">Origineel</h4>
        <div class="form-row">
            <div class="form-group col">
                <label for="name-field">Objectnaam</label>
                <input id="name-field" name="name" type="text" class="form-control form-control-sm" autocomplete="off" value="{{ .Original.Name }}" disabled>
            </div>
            <div class="form-group col">
                <label for="quantity-field">Aantal</label>
                <input id="quantity-field" name="quantity" type="number" class="form-control form-control-sm" value="{{ .Original.Quantity }}" autocomplete="off" disabled>
            </div>
        </div>
        <div class="form-group">
            <label for="tags-field">Tags</label>
            <input id="tags-field" name="tags" type="text" class="form-control form-control-sm" value="{{ .Original.Tags }}" autocomplete="off" disabled>
        </div>
        <div class="form-group">
            <label for="category-field">CategorieÃ«n</label>
            <input id="category-field" name="categories" type="text" class="form-control form-control-sm" value="{{ .Original.Categories }}" autocomplete="off" disabled>
        </div>
        <div class="form-group">
            <label for="properties-field">Eigenschappen</label>
            <input id="properties-field" name="properties" type="text" class="form-control form-control-sm" value="{{ .Original.Properties }}" autocomplete="off" disabled>
        </div>
        <div class="form-group">
            <label for="properties-field">Aantekeningen</label>
            <textarea id="properties-field" name="notes" rows="3" class="form-control form-control-sm" autocomplete="off" disabled>{{ .Original.Notes }}</textarea>
        </div>
        <div class="form-check mb-3">
            <input type="checkbox" name="hidden" class="form-control-sm form-check-input" id="check-hidden" value="true" {{ if eq .Original.Hidden "true" }}checked{{ end }} disabled>
            <label class="form-check-label" for="check-hidden">Verborgen</label>
        </div>
    </div>
</div>
{{ end }}