{{ define "navbar-text" }}
Aantal: <b>{{ len .Objects }}</b>
{{ end }}

{{ define "content" }}
{{ $private_mode := .PrivateMode }}
<div class="row mt-2">
    <div class="col">
        <form action="/" method="post">
            <div class="form-row">
                <div class="form-group col">
                    <label for="name-field">Objectnaam</label>
                    <input id="name-field" name="name" type="text" class="form-control form-control-sm" placeholder="tafel" autocomplete="off" autofocus>
                </div>
                <div class="form-group col">
                    <label for="quantity-field">Aantal</label>
                    <input id="quantity-field" name="quantity" type="number" class="form-control form-control-sm" value="1" autocomplete="off" autofocus>
                </div>
            </div>
            <div class="form-group">
                <label for="tags-field">Tags</label>
                <i class="fa fa-question-circle-o text-primary pull-right" title="veranderlijke groeperingen"></i>
                <input id="tags-field" name="tags" type="text" class="form-control form-control-sm" placeholder="woonkamer,opruimen" autocomplete="off">
            </div>
            <div class="form-group">
                <label for="category-field">CategorieÃ«n</label>
                <i class="fa fa-question-circle-o text-primary pull-right" title="onveranderlijke groeperingen"></i>
                <input id="category-field" name="categories" type="text" class="form-control form-control-sm" placeholder="meubel,groot" autocomplete="off">
            </div>
            <div class="form-group">
                <label for="properties-field">Eigenschappen</label>
                <input id="properties-field" name="properties" type="text" class="form-control form-control-sm" placeholder="kleur=bruin,materiaal=hout" autocomplete="off">
            </div>
            <div class="form-check mb-3">
                <input type="checkbox" name="hidden" class="form-control-sm form-check-input" id="check-hidden" value="true">
                <input type="hidden" name="hidden" value="false">
                <label class="form-check-label" for="check-hidden">Verborgen</label>
            </div>
            <button type="submit" class="btn btn-outline-primary">Opslaan</button>
        </form>
    </div>
    <div class="col">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th scope="col">Naam</th>
                    <th scope="col">Sinds</th>
                    <th scope="col">Tags</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
            {{ range .Objects }}
                {{ if and $private_mode .Hidden }}
                <tr>
                    <td colspan="3"><span class="text-muted"><i>verborgen</i></span></td>
                </tr>
                {{ else }}
                <tr>
                    <td>
                        {{ if .Hidden }}<i class="fa fa-exclamation"></i>{{ end }} {{ .Name }}
                    </td>
                    <td>{{ .Added.Format "02-01-2006" }}</td>
                    <td>
                        {{ range .Tags }}
                            <span class="badge badge-pill badge-secondary">{{ . }}</span>
                        {{ end }}
                    </td>
                    <td>
                        <a class="text-secondary" href="/edit?id={{ .Id }}"><i class="fa fa-pencil"></i></a>
                    </td>
                </tr>
                {{ end }}
            {{ end }}
            </tbody>
        </table>
    </div>
</div>
{{ end }}