{{ define "navbar" }}
{{ if .DevMode }}<b class="text-danger">DEV MODE</b>{{ end }}
{{ end }}

{{ define "content" }}
<form action="/" method="post">
    <div class="row mt-2">
        <div class="col">
            <h4>Database openen</h4>
            {{ with .Alert }}
            <div class="alert alert-danger">{{ . }}</div>
            {{ end }}
            <div class="form-row">
            {{ $numDbs := len .Databases }}
            {{ if gt $numDbs 0}}

            <div class="form-group col">
                <label for="existing-db-field">Bestaande database</label>
                <select class="form-control form-control-sm" id="existing-db-field" name="existing-db">
                    {{ range .Databases }}
                        <option>{{ . }}</option>
                    {{ end }}
                </select>
            </div>
            {{ end }}
            <div class="form-group col">
                <label for="new-db-field">Nieuwe database</label>
                {{ with .Form.Errors.Database }}
                    <input id="new-db-field" name="new-db" type="text" class="form-control form-control-sm is-invalid" autocomplete="off">
                    <div class="invalid-feedback">{{ . }}</div>
                {{ else }}
                    <input id="new-db-field" name="new-db" type="text" class="form-control form-control-sm" autocomplete="off">
                {{ end }}
            </div>
            </div>
            <hr>
            <div class="form-group">
                <label for="password-field">Wachtwoord</label>
                {{ with .Form.Errors.Password }}
                    <input id="password-field" name="password" type="password" class="form-control form-control-sm is-invalid" autocomplete="off">
                    <div class="invalid-feedback">{{ . }}</div>
                {{ else }}
                    <input id="password-field" name="password" type="password" class="form-control form-control-sm" autocomplete="off">
                {{ end }}
            </div>
            <div class="form-check mb-3">
                <input type="checkbox" name="private-mode" class="form-control-sm form-check-input" id="private-mode" value="true" {{ if eq .Form.PrivateMode "true" }}checked{{ end }}>
                <input type="hidden" name="private-mode" value="false">
                <label class="form-check-label" for="private-mode">Open in priv√©modus</label>
            </div>
            <input type="hidden" name="is_existing" value="true">
            <button type="submit" class="btn btn-outline-success btn-spinner">
                <span class="spinner-border spinner-border-sm" role="status" style="display:none" aria-hidden="true"></span>
                Openen
            </button>
        </div>
    </div>
</form>
<script>
function spinner() {
    const buttons = document.getElementsByClassName('btn-spinner');
    for (let i = 0; i < buttons.length; i++) {
        buttons[i].addEventListener('click', () => {
            buttons[i].querySelector('span').style.display = ''
        })
    }
}
spinner();
</script>
{{ end }}